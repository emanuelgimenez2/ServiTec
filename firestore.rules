rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de usuarios
    match /usuario/{userId} {
      // Los usuarios pueden leer y escribir sus propios documentos
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Los administradores pueden leer todos los usuarios
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/usuario/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/usuario/$(request.auth.uid)).data.role == "administrador";
    }
    
    // Reglas para la colección de carrito
    match /carrito/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para la colección de lista de deseos
    match /lista_de_deseos/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para otras colecciones (productos, etc.)
    match /{document=**} {
      // Permitir lectura a usuarios autenticados
      allow read: if request.auth != null;
      // Permitir escritura solo a administradores
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/usuario/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/usuario/$(request.auth.uid)).data.role == "administrador";
    }
  }
}